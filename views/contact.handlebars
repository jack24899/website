<script>
  // FAQ toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const faqButtons = document.querySelectorAll('.border.border-gray-200 button');
    
    faqButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Toggle the icon
        const icon = button.querySelector('i');
        icon.classList.toggle('fa-chevron-down');
        icon.classList.toggle('fa-chevron-up');
        
        // Toggle the content visibility
        const content = button.nextElementSibling;
        content.style.display = content.style.display === 'none' ? 'block' : 'none';
      });
    });
    
    // Hide all FAQ content initially except the first one
    const faqContents = document.querySelectorAll('.border.border-gray-200 > div');
    faqContents.forEach((content, index) => {
      if (index > 0) {
        content.style.display = 'none';
      }
    });
  });
</script>